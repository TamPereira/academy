<div class="cadastro-box">
  <h2>Adicione Professor</h2>
  <form action="/professor/create" method="POST" class="form">
    <div class="user-box">
      <label for="name">Nome:</label>
      <input type="text" name="name" placeholder="Nome do professor">
    </div>
    <div class="user-box">
      <label for="email">Email</label>
      <input type="email" name="email" placeholder="Email do professor">
    </div>
    <div>
      <input class="btn btn-outline-primary" type="submit" value="Cadastrar">
    </div>
  </form>
</div>